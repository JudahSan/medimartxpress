<h1>Categories show page</h1>
<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap flex-col mt-6">
    <h2 class="text-lg text-gray-800 dark:text-gray-200">Filter</h2>
  </div>
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-apart">
    <% if @products.empty? %>
      <p class="text-2xl text-left text-gray-800 dark:text-gray-200">No products found</p>
    <% else %>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="max-w-xs flex flex-col p-4 justify-center items-center">
            <%= product.images.first ? image_tag(product.images_as_category_section, class: "rounded") : image_tag("http://via.placeholder.com/250", class: "rounded") %>
            <p class="mt-6 font-medium text-gray-800 dark:text-gray-200"><%= product.name %></p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

