<div class="mx-auto md:w-4/5 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_order %>

    <%= link_to "Edit this admin_order", edit_admin_order_path(@admin_order), class: "mt-2 rounded-lg py-3 px-5 bg-purple-600 hover:bg-purple-900 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this admin_order", admin_order_path(@admin_order), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-purple-600 hover:bg-purple-900 font-medium" %>
    </div>
    <%= link_to "Back to admin_orders", admin_orders_path, class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-purple-600 hover:bg-purple-900 inline-block font-medium" %>
  </div>
</div>
