<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customer email:</strong>
    <%= order.customer_email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </p>

  <% if order.order_products.any? %>
    <strong class="block font-medium mb-1">Products:</strong>
    <% order.order_products.each do |op| %>
      <div>
        <span class="font-semibold"><%= op.product.name %></span> -
        <span class="text-gray-600">Size: <%= op.size %></span> -
        <span class="text-gray-600">Quantity: <%= op.quantity %></span>
      </div>
    <% end %>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this order", [:admin, order], class: "rounded-lg py-3 px-5 bg-purple-100 hover:bg-purple-300 inline-block font-medium" %>
    <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-purple-100 hover:bg-purple-300 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
